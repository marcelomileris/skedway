	"version": "0.2.0",
	"configurations": [
		{
			"name": "Listen for XDebug",
			"type": "php",
			"request": "launch",
			"port": 9001
		},
		{
			"type": "php",
			"request": "launch",
			"name": "Run using local PHP Interpreter",
			"program": "${file}",
			"runtimeExecutable": "D:\\xampp\\php\\php.exe"
		},
		{
			"type": "php",
			"request": "launch",
			"name": "Launch currently open script",
			"program": "${file}",
			"cwd": "{fileDirname}",
			"port": 9900
		}
	]
}
